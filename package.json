{
	"name": "c15t",
	"private": true,
	"description": "Developer-first Consent Management Platform",
	"homepage": "https://c15t.com",
	"repository": {
		"type": "git",
		"url": "https://github.com/c15t/c15t.git"
	},
	"license": "GPL-3.0-only",
	"type": "module",
	"scripts": {
		"build": "turbo build",
		"changeset": "changeset",
		"check-types": "turbo check-types",
		"ci:publish": "pnpm changeset tag && pnpm publish -r",
		"ci:version": "pnpm changeset version",
		"dev": "turbo dev --concurrency=11",
		"dev:docs-app": "pnpm --prefix .docs dev",
		"fmt": "turbo fmt",
		"fmt:docs": "pnpm remark ./docs --ext mdx --output --use remark-mdx --use remark-frontmatter --use remark-preset-lint-recommended --use remark-preset-lint-consistent",
		"generate:readmes": "tsx scripts/generate-readme.ts",
		"postinstall": "lefthook install",
		"knip": "knip",
		"lint": "turbo lint",
		"lint:docs": "pnpm remark ./docs --ext mdx --output --use remark-mdx --use remark-frontmatter --use remark-preset-lint-recommended --use remark-preset-lint-consistent",
		"lint:fix": "turbo lint -- --write",
		"release": "pnpm build && changeset publish",
		"release:canary": "pnpm build && changeset publish --tag canary",
		"setup:docs": "tsx scripts/setup-docs.ts",
		"test": "turbo test",
		"vercel-build": "tsx scripts/setup-docs.ts --vercel",
		"version": "changeset version && pnpm install --lockfile-only",
		"version:canary": "changeset version --snapshot canary && pnpm install --lockfile-only",
		"version:prerelease": "changeset pre enter canary",
		"version:prerelease:exit": "changeset pre exit",
		"view-report": "turbo run view-report"
	},
	"resolutions": {
		"@libsql/kysely-libsql": "^0.4.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.0",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.28.1",
		"@rsbuild/core": "1.3.5",
		"@rsbuild/plugin-react": "^1.2.0",
		"@rslib/core": "^0.6.2",
		"@types/node": "22.14.1",
		"@types/react": "19.1.1",
		"@types/react-dom": "19.1.2",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/browser": "^3.1.1",
		"@vitest/coverage-istanbul": "^3.1.1",
		"changeset-conventional-commits": "^0.2.5",
		"knip": "^5.50.4",
		"lefthook": "^1.11.10",
		"playwright": "^1.51.1",
		"remark-cli": "^12.0.1",
		"remark-frontmatter": "^5.0.0",
		"remark-mdx": "^3.1.0",
		"remark-preset-lint-consistent": "^6.0.1",
		"remark-preset-lint-recommended": "^7.0.1",
		"tsx": "^4.19.3",
		"turbo": "^2.5.0",
		"typescript": "5.8.3",
		"vitest": "^3.1.1",
		"vitest-browser-react": "^0.1.1"
	},
	"packageManager": "pnpm@10.8.0",
	"engines": {
		"node": ">=18.17.0"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.1.1",
			"@types/react-dom": "19.1.2"
		}
	}
}
